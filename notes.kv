<ListItem>:
	
	#BoxLayout:
	#boundary box
	canvas.before:
		Color:
			rgba: 0, 0, 0, .9
		Line:
			width: 1.
			rectangle: (self.x, self.y, self.width, self.height)
	orientation:"vertical"
	#Title
	Label:
		text:root.title
		color:"black"
	#In future may have to create a TextInput field that allows editing after clicking
	#TextInput:
	Label:
		text:root.content
		color:"black"
<TagItem>:
	canvas.before:
		Color:
	    	rgba: 1, 1, 1, 1
	    Line:
	    	width: 1.
	        rectangle: (self.x, self.y, self.width, self.height)
	    Rectangle:
	    	
	    	size:self.width,self.height
	    	pos:self.x,self.y
	    	
	size_hint_y:None
	orientation:"horizontal"
	Label:
		id: tagText
		text: root.tagName
		height:40
		color:root.color
	CheckBox:
		id: cb
		on_active: root.checkbox_click(self, self.active)
		size_hint_x: .20
		active: self.parent.activate
	
<DisplayList>:
	# greenish bounding box
    canvas.before:
		Color:
            rgba: .1, 1,.1, .9
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
	ScrollView:
		id:scroll		
		do_scroll_x: False
		do_scroll_y: True
		BoxLayout:			
			orientation:"vertical"
		    padding: 10,10
		    size_hint_y:None
			id: noteList
				
			
<InsertNote>:
    orientation:"vertical"
    padding: 10
    canvas:
        Color:
            rgba: .1, .1, 1, .9 
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
    TextInput:
    	id: enterTitle
    	multiline: False
    	focus:True
    	hint_text: "Enter note Title"
    	font_size: "25sp"
    	#size_hint_y: 0.75
	TextInput:
    	id: assignTag
    	multiline: False
		hint_text:"Tag your note with some new Subject or Topic"	
		font_size:"15sp"
		#size_hint_y:0.4
#		size_hint_x:0.25
	Button:
		text: "Consider Tag "
		on_press:root.fetchTagInput()
		on_release: root.removeText(root.ids['assignTag'])
		size_hint_x:0.25
	TagsDropDown:
		id: reuseTag
		#size_hint_y: 0.25
		buttonName: "Pick from Previously used Tags"
    TextInput:
    #Enter Note here
        id: enterNote
        tag:"default"
        multiline: True
        focus:True
        hint_text: "Enter your note here.."
        font_size: "20sp"
   #Leave space to add tags
    
    Button:
    	id: insertNote
    	on_press: root.addNote()
    	on_release: root.removeText(root.ids['enterTitle'],root.ids['enterNote'],root.ids['assignTag'])
        text:"ADD"
        padding: 10
        background_color:"blue"
        size_hint: 1, None
        height: "40dp"
        pos_hint: {'center_x': .5}
        


<NoteManager>:

    id:NM
    labelNote: title
    orientation: "vertical"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        padding: 20
        orientation: "vertical"
        height: "50dp"
        BoxLayout:
        	orientation: "horizontal"
        	
	        Label: 
	            id:title
	            text:"Notes App1"
	            text_size: self.size
	            font_size:40
	            halign:'left'
	            valign:'middle'
	            color: "black"
	        TextInput:
	        	id:notesSearch
				multiline: False
				hint_text: "Search term"
				size_hint_y: 0.25
				
	        Button:
	        	id:searchNow
        		text: "Search"
        		size_hint_y: 0.25
        		on_press: root.ids['noteListParent'].searchCall(criteria=0,title=root.ids['notesSearch'].text)
        		on_release: root.removeText(root.ids['notesSearch'])
        	Button:
        		id:clearSearch
        		text: "Clear Filters"
        		size_hint_y: 0.25
        		on_press:root.ids['noteListParent'].searchCall(criteria=2,title=None) 
        		on_release:root.ids['noteListParent'].removeText(root.ids['notesSearch']) ,root.ids['noteListParent'].resetSelections()
        	Button:
        		id:taggedSearch
        		text: "Filter by Tags"
        		size_hint_y: 0.25
        		on_press:root.ids['noteListParent'].searchCall(criteria=1,title=None) 
        		on_release:root.ids['noteListParent'].removeText(root.ids['notesSearch']) 
			TagsDropDown:
				id:tgDrop

        		
        		
        #save Notes to file and refresh list
        InsertNote:
            id: viewNotes
        DisplayList:
        	id: noteListParent

